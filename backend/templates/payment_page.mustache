<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>{{product.title}} â€” Buy</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    body {
      font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: {{product.checkoutSchema.backgroundColor}};
      color: {{product.checkoutSchema.textColor}};
      margin: 0;
      padding: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }
    .card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 6px 18px rgba(2,6,23,0.08);
      width: 420px;
      max-width: 94vw;
    }
    .img {
      width: 100%; /* Full width */
      height: auto; /* Auto height to maintain aspect ratio */
      object-fit: contain; /* Ensure the image fits within the container */
      border-radius: 8px;
      background: #efefef;
    }
    .title {
      font-size: 18px;
      margin-top: 12px;
      font-weight: 600;
    }
    .desc {
      color: #6b7280;
      margin-top: 8px;
      font-size: 14px;
    }
    .price {
      font-size: 20px;
      font-weight: 700;
      margin-top: 12px;
    }
    .btn {
      width: 100%;
      padding: 12px;
      border-radius: 8px;
      background: {{product.checkoutSchema.buttonColor}};
      color: white;
      border: none;
      font-weight: 600;
      margin-top: 12px;
      cursor: pointer;
    }
    .small {
      font-size: 12px;
      color: #6b7280;
      margin-top: 8px;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="card">
    {{#product.image_url}}
      <img src="{{product.image_url}}" class="img" alt="product image" />
    {{/product.image_url}}
    <div class="title">{{product.title}}</div>
    <div class="desc">{{product.description}}</div>
    <div class="price">${{product.price_display}}</div>
    <button id="buyBtn" class="btn">Buy now</button>
    <div class="small">Secure checkout powered by Stripe.</div>
  </div>

  <script>
    const buyBtn = document.getElementById('buyBtn');
    buyBtn.addEventListener('click', async () => {
      buyBtn.disabled = true; buyBtn.textContent = 'Creating checkout...';
      try {
        const res = await fetch('/api/create-checkout-session', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ linkId: '{{link.linkId}}' })
        });
        const json = await res.json();
        if (json.url) {
          window.location = json.url;
        } else {
          alert('Failed to create checkout session');
          buyBtn.disabled = false; buyBtn.textContent = 'Buy now';
        }
      } catch (err) {
        alert('Error: ' + err.message);
        buyBtn.disabled = false; buyBtn.textContent = 'Buy now';
      }
    });
  </script>
</body>
</html>
